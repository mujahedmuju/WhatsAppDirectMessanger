    <carbon.widget.RelativeLayout
        android:id="@+id/whatsAppLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        app:carbon_cornerRadius="@dimen/_10sdp"
        app:carbon_stroke="@color/carbon_blueGrey_50"
        app:carbon_strokeWidth="@dimen/_1sdp">

        <ImageView
            android:id="@+id/imgWhatsappLogo"
            android:layout_width="@dimen/_55sdp"
            android:layout_height="@dimen/_55sdp"
            android:padding="@dimen/_12sdp"
            android:src="@drawable/whatsapp_logo" />
        <LinearLayout
            android:id="@+id/textLayot"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_toRightOf="@id/imgWhatsappLogo"
            android:layout_toLeftOf="@id/nextBtn1"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/manrope_bold"
                android:text="What's App"
                android:textColor="@color/carbon_green_500"
                android:textSize="@dimen/_12ssp" />
        <TextView
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save and Download What's app Status"
            android:textColor="@color/black"
            android:textSize="@dimen/_9ssp"
            android:fontFamily="@font/manrope_semibold"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/nextBtn1"
            android:layout_width="@dimen/_55sdp"
            android:layout_height="@dimen/_55sdp"
            android:layout_alignParentRight="true"
            android:padding="@dimen/_12sdp"
            android:src="@drawable/next_btn" />
    </carbon.widget.RelativeLayout>


