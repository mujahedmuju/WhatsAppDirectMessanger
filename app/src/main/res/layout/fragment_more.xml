    <carbon.widget.RelativeLayout
        android:id="@+id/shareAppLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        app:carbon_cornerRadius="@dimen/_10sdp"
        app:carbon_stroke="@color/carbon_blueGrey_50"
        app:carbon_strokeWidth="@dimen/_1sdp">

        <ImageView
            android:id="@+id/imgShareApp"
            android:layout_width="@dimen/_55sdp"
            android:layout_height="@dimen/_55sdp"
            android:padding="@dimen/_15sdp"
            android:src="@drawable/share_app" />
        <LinearLayout
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_toLeftOf="@id/nextBtn4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
